{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*"]
}
